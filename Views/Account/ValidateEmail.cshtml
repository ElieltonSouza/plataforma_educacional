@model plataforma_educacional.Models.ViewModels.ValidateEmailViewModel

@{
    ViewData["Title"] = "Validação de E-mail";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="ValidateEmail" method="post">
    <div class="form-group">
        <label asp-for="CodigoValidacao" class="control-label"></label>
        <input asp-for="CodigoValidacao" class="form-control" />
        <span asp-validation-for="CodigoValidacao" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Validar</button>
    </div>
</form>